<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/Silver"
    android:orientation="vertical" >
    

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/oriange"
        android:gravity="center"
        android:text="@string/comment"
        android:textSize="@dimen/text_size_middle" />

    <com.foomap.pulltorefresh.library.PullToRefreshListView
        android:layout_margin="@dimen/layut_margin_small"
        android:id="@+id/commentList_poiDetail"
       
        android:dividerHeight="@dimen/dividerHeight"
    
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </com.foomap.pulltorefresh.library.PullToRefreshListView>

</LinearLayout>