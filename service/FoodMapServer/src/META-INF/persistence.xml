<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
    
	<persistence-unit name="FoodMapServerPU"
		transaction-type="RESOURCE_LOCAL">
		<provider>
			org.eclipse.persistence.jpa.PersistenceProvider
		</provider>
		<class>dao.pojo.User</class>
		<class>dao.pojo.Collection</class>
		<class>dao.pojo.Comment</class>
		<class>dao.pojo.Picture</class>
		<class>dao.pojo.Shop</class>
		<class>dao.pojo.Type</class>
		<properties>
			<property name="eclipselink.jdbc.driver"
				value="com.mysql.jdbc.Driver" />
			<property name="eclipselink.jdbc.url"
				value="jdbc:mysql://localhost:3306/foodmap" />
			<property name="eclipselink.jdbc.user" value="root" />
			<property name="eclipselink.jdbc.password" value="qh8871301" />
		</properties>
	</persistence-unit>

</persistence>
